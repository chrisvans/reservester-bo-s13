<%- model_class = User -%>
<script
type="text/javascript"
src="http://maps.google.com/maps/api/js?sensor=false">
</script>
<div class="page-header">
  <h1>Restaurant Owner - <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
      <ul class="thumbnails">
        <% @restaurants.each do |restaurant| %>
          <li class="span4">
            <%= link_to user_restaurant_path(current_user, restaurant) do %>
              <%= image_tag restaurant.photo.thumbnail.url if restaurant.photo? %>
              <h3><%= restaurant.name %><h3>
            <%- end %>
          </li>
        <% end %>
      </ul>

<% if current_user.try(:is_owner?) %>
  <%= link_to 'New Restaurant', new_user_restaurant_path(current_user), :class => 'btn' %>
<% end %>