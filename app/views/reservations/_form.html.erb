<%= form_for @reservation, :html => { :class => 'form-horizontal', :multipart => true, :"data-validate" => 'parsley' } do |f| %>
   <%= render "shared/error_messages", :target => @reservation %>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field', :class=> 'required', :"data-required" =>'true', :required => 'true' %>
    </div>
  </div>


    <div class="control-group"> 
      <%= f.label :booking_time, "Booking Time" %> 
      <div class="controls">
        <%= f.text_field :booking_time, :id => "bookingTime" %>
        
      </div>
    </div>

  



  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path, :class => 'btn' %>
  </div>
<% end %>
