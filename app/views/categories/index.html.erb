<h1>Categories</h1>
<% @categories.each do |cat| %>
<%= link_to "#{cat.titleized_name} (#{cat.restaurants.count})", category_path(cat) %><br />
<% end %>

<%= form_tag(categories_search_path, method: "get", :class => 'form-horizontal') do %>

<div class="control-group">
    <%= label_tag :category_ids, "Search by Categories", :class => 'control-label' %>
    <div class="controls">
      <%= select_tag :category_ids,
      options_for_select(Category.all.map { |cat| [cat.name, cat.id] }),
       { include_blank: false, :multiple => true, :class => 'chzn-select' }
      %>
    </div>
    <div class="controls">
    	<%= submit_tag("Search") %>
    </div>
</div>


<% end %>