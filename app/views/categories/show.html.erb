<h3>All Restaurants in the <%= @categories.name %> Category</h3>


<% @restaurant.each do |restaurant| %>
	<ul class="thumbnails">
		<li class="span4">
			<div class="thumbnail">
				<h3><%= restaurant.name %></h3>
				<%= link_to((image_tag(restaurant.image_url(:thumb).to_s)), {:controller => 'restaurants', :action => 'show', :id => restaurant.id} ) %>
				<p><%= restaurant.description %></p>
			</div>
		</li>
<% end %>







