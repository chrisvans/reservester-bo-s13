<h1>Edit your Restaurant</h1>

<%= form_for :restaurant, url: restaurant_path(@restaurant.id) do |f| %>
  <% if @restaurant.errors.any? %>
  <div id="errorExplanation">
  	<h2><%= pluralize(@restaurant.errors.count, "error")  %> prohibited this post from being saved: </h2>
  	<ul>
  		<% @restaurant.errors.full_messages.each do |msg| %>
  		  <li><%= msg %></li>
  		<% end %>
  	</ul>
  </div>
  <% end %>
  <p>
  	  <%= f.label :name %><br>
  	  <%= f.text_field :name %>
  </p>

  <p>
  	  <%= f.label :description %><br>
  	  <%= f.text_field :description %>
  </p>

  <p>
  	  <%= f.label :address %><br>
  	  <%= f.text_field :address %>
  </p>

  <p>
  	  <%= f.label :phone %><br>
  	  <%= f.text_field :phone %>
  </p>

  <p>
  	  <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', restaurants_path %>