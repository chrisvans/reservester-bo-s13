<%= form_for ([@owner, @restaurant]), :html => {:multipart => true} do |f| %>
   <%= render "shared/error_messages", :target => @restaurant %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field', :class=> 'required', :"data-required" =>'true', :required => 'true' %>
    </div>
  </div>

    <div class="control-group">
    <% Category.all.each do |category| %>
      <%= check_box_tag "restaurant[category_ids][]", category.id, @restaurant.categories.include?(category) %>
      <%= category.name %> <br>
    <% end %>
  </div>

  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :address, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'text_field', :"data-type" => "phone" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :image %>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :menu, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :menu %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurants_path, :class => 'btn' %>
  </div>
<% end %>
