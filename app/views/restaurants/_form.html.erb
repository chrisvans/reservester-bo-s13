<%= form_for @restaurant, :html => {:multipart => true} do |f| %>
  <% if @restaurant.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@restaurant.errors.count, "error") %> kept
      you from saving this restaurant:</h2>
    <ul>
    <% @restaurant.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>

  <p>
    <%= f.label :phone %><br>
    <%= f.text_area :phone %>
  </p>

  <p>
    <%= f.label :image %>
    <%= image_tag(@restaurant.image_url) if @restaurant.image? %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </p>

   <p>
    <%= f.label :menu %>
    <%= image_tag(@restaurant.menu_url) if @restaurant.menu? %>
    <%= f.file_field :menu %>
    <%= f.hidden_field :menu_cache %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>