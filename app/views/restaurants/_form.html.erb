<%= form_for @restaurant, :html => {:multipart => true} do |f| %>
	<p><%= f.label :name %></p>
	<p><%= f.text_field :name %></p>
	<p><%= f.label :description %></p>
	<p><%= f.text_area :description %></p>
	<p><%= f.label :address %></p>
	<p><%= f.text_field :address %></p>
	<p><%= f.label :phone %></p>
	<p><%= f.text_field :phone %></p>
	<p><%= f.file_field :image %></p>
	<% for category in Category.find(:all) %>
	<label class="checkbox">
       <%= check_box_tag "restaurant[category_ids][]", category.id, @restaurant.categories.include?(category) %>
       <%= category.name %>
    </label>
    <% end %>
	<%= f.submit %>
<% end %>