<%- model_class = Restaurant -%>

<div class="row-fluid">
  <div class="span8">
    <div class="details row-fluid">
      <div class="detailsimg span4">
        <%= image_tag @restaurant.image.masthead.url if @restaurant.image? %>
      </div>
      <div class="info span8">
        <h3><%=t '.title', :default => @restaurant.name %></h3>
        <hr>
        <div class="span4">
          <dl-horizontal>
            
            <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
            <dd><%= @restaurant.address %><br><%= @restaurant.city %> <%= @restaurant.state %> <%= @restaurant.zipcode %></dd>

              <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
            <dd><%= @restaurant.phone %></dd>

          </dl>
        </div>
        <div class="span4">
          <dl-horizontal>
            <dt><strong>Owner:</strong></dt>
              <dd><%= @restaurant.owner.name  %></dd>
            
            <dt><strong>Menu:</strong></dt>
              <dd><%= link_to "Menu", @restaurant.menu_url if @restaurant.menu? %>
            <dt><strong>Categories</strong></dt>
              <dd>
               <% for category in @restaurant.categories %>
                <li><%= category.name %></li>
               <% end %>
              </dd>
              
          </dl>
        </div>

      </div>
              <div class="span12">          
          <%= @restaurant.description %>
        </div>
    </div>
  </div>  

  <div class="span4">
     <img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= @restaurant.address %><%= @restaurant.city %> <%= @restaurant.state %>&zoom=15&size=306x230&sensor=false&markers=color:blue|label:R|<%=@restaurant.address %>" />
  </div>
</div><!-- /row-fluid -->

<%- if current_owner == @restaurant.owner %>
<h2>Reservations</h2>
<table class="table table-striped">
    <tr>
      <th>Email</th>
      <th>Reserve On</th>
      <th>Message</th>
      <th></th>
    </tr>
    <%- @restaurant.reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.email %></td>
        <td><%= reservation.booking_time %></td>
        <td><%= reservation.message %></td>
        <td><%= link_to 'Mark as Confirmed', restaurant_reservation_path(@restaurant, reservation), :method => :delete, :confirm => 'Confirm this reservation?' %></td>
      </tr>
    <%- end %>
</table>    
<%- else %>
  <h2>New Reservation</h2>
  <%= render 'reservations/form' , :reservation => @reservation %>
<%- end %>
<hr>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              restaurants_path, :class => 'btn'  %>
  <%- if current_owner == @restaurant.owner && !current_owner.blank? %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restaurant_path(@restaurant), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurant_path(@restaurant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <%- end %>
</div>
