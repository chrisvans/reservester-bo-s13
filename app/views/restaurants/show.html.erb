<%- model_class = Restaurant -%>
<div class="page-header">
  <h1><%=t '.title', :default => @restaurant.name %></h1>
</div>

<div class="row-fluid">
  <div class="span8">

    <dl >
    
      <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
      <dd><%= @restaurant.description %></dd>
      
      <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
      <dd><%= @restaurant.address %></dd>

      <dt><strong><%= model_class.human_attribute_name(:address2) %>:</strong></dt>
      <dd><%= @restaurant.address2 %></dd>

      <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
      <dd><%= @restaurant.city %></dd>

      <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
      <dd><%= @restaurant.state %></dd>

      <dt><strong><%= model_class.human_attribute_name(:zipcode) %>:</strong></dt>
      <dd><%= @restaurant.zipcode %></dd>
      
      <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
      <dd><%= @restaurant.phone %></dd>
      
      <dt><strong>Owner:</strong></dt>
      <dd><%= @restaurant.owner.name  %></dd>
      
      <dt><strong>Menu:</strong></dt>
      <dd><%= link_to "Menu", @restaurant.menu_url if @restaurant.menu? %>
    </dl>

  </div> <!-- /span8 -->

  <div class="span4">
    <%= image_tag @restaurant.image.masthead.url if @restaurant.image? %>
  </div>

    <img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= @restaurant.address %>&zoom=15&size=1200x400&sensor=false&markers=color:blue|label:R|<%=@restaurant.address %>">

</div><!-- /row-fluid -->

<%- if current_owner == @restaurant.owner %>
<h2>Reservations</h2>
<table class="table table-striped">
    <tr>
      <th>Email</th>
      <th>Reserve On</th>
      <th>Message</th>
      <th></th>
    </tr>
    <%- @restaurant.reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.email %></td>
        <td><%= reservation.booking_time %></td>
        <td><%= reservation.message %></td>
      </tr>
    <%- end %>
<%- else %>
  <h2>New Reservation</h2>
  <%= render 'reservations/form' , :reservation => @reservation %>
<%- end %>

test


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              restaurants_path, :class => 'btn'  %>
  <%- if current_owner == @restaurant.owner && !current_owner.blank? %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restaurant_path(@restaurant), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurant_path(@restaurant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <%- end %>
</div>
