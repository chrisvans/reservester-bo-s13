<%- model_class = Restaurant -%>

<div class="page-header">

  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>

</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:photo) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <th>
        Uploaded File
      </th>
      <th>
        Location
      </th>
    </tr>
  </thead>
  <tbody>
        <tr>
        <td><%= @restaurant.name %></td>
        <td><%= @restaurant.description %></td>
        <td><%= @restaurant.address %></td>
        <td><%= @restaurant.phone %></td>
        <td><%= image_tag @restaurant.photo_url(:masthead) %></td>
        <td><%=l @restaurant.created_at %></td>
        <td>
          <% if owner_signed_in? %>
          <%= link_to "Edit Restaurant",
                      edit_restaurant_path, :class => 'btn btn-mini' %>
          <%= link_to "Delete Restaurant",
                      restaurant_path,
                      :method => :delete,                      
                      :data => { :confirm => 'Are you sure?' },
                      :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
        <td>
        <a href="<%= @restaurant.pdf %>">Download PDF of Menu</a>
        </td>

        <td><img src='https://maps.googleapis.com/maps/api/staticmap?center=<%= @restaurant.latitude.to_s %>,<%= @restaurant.longitude.to_s %>&zoom=19&size=400x400&markers=color:green%7Clabel:R%7C<%= @restaurant.latitude.to_s %>,<%= @restaurant.longitude.to_s %>&sensor=false' alt="Location" ></td>
    </tr>


  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              restaurants_path, :class => 'btn'  %>

</div>
