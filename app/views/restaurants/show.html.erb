<%- model_class = Restaurant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @restaurant.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @restaurant.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @restaurant.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @restaurant.phone %></dd>
  <dd><%= image_tag @restaurant.photo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:photo) %>:</strong></dt>
  <dd><%= @restaurant.photo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:menu) %>:</strong></dt>
  <dd><td><%= link_to 'Download', @restaurant.menu_url.to_s if @restaurant.menu_url != nil %></dd>
</dl>

<%- if current_owner == @restaurant.owner %>
  <h2>Reservations</h2>
  <table class="table table-striped">
    <tr>
      <th>Email</th>
      <th>Reserve On</th>
      <th>Message</th>
      <th></th>
    </tr>
    <%- @restaurant.reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.email %></td>
        <td><%= reservation.reserve_on %></td>
        <td><%= reservation.message %></td>
        <td><%= link_to 'Marked as Confirmed', reservation_path(reservation), :method => :delete, :confirm => 'Mark this reservation confirmed?' %></td>
      </tr>
    <%- end %>
  </table>
<%- else %>
  <h2>New Reservation</h2>
  <%= render 'reservations/form', :reservation => @reservation %>
<%- end %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              restaurants_path, :class => 'btn'  %>

  <% if @restaurant.owner == current_owner %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restaurant_path(@restaurant), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurant_path(@restaurant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
