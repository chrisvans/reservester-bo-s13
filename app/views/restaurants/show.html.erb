<%- model_class = Restaurant -%>
<div class="page-header">
  <h1><%=t '.title', :default => @restaurant.name %></h1>
</div>

<div class="row">
  <div class="span4">
        <h4>Details</h4>
    <dl class="dl-horizontal">
  
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @restaurant.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @restaurant.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @restaurant.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @restaurant.phone %></dd>
  <dt><strong>Owner:</strong></dt>
  <dd><%= @restaurant.owner.name  %></dd>
</dl>

  <img src="http://maps.googleapis.com/maps/api/staticmap?center=<%=  @restaurant.address %>&zoom=15&size=600x500&sensor=false&markers=color:blue|label:R|<%=@restaurant.address %>">
  </div>
  <div class="span8">
    <h4>Images</h4>
  <%= image_tag @restaurant.image.masthead.url if @restaurant.image? %>
  </div>
</div>


<%- if current_owner == @restaurant.owner %>
<h2>Reservations</h2>
<table class="table table-striped">
    <tr>
      <th>Email</th>
      <th>Reserve On</th>
      <th>Message</th>
      <th></th>
    </tr>
    <%- @restaurant.reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.email %></td>
        <td><%= reservation.reserve_on %></td>
        <td><%= reservation.message %></td>
        <td><%= link_to 'Marked as Confirmed', reservation_path(reservation), :method => :delete, :confirm => 'Mark this reservation confirmed?' %></td>
      </tr>
    <%- end %>

<%- else %>
  <h2>New Reservation</h2>
  <%= render 'reservations/form' , :reservation => @reservation %>
<%- end %>



<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              restaurants_path, :class => 'btn'  %>
  <%- if current_owner == @restaurant.owner && !current_owner.blank? %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restaurant_path(@restaurant), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurant_path(@restaurant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <%- end %>
</div>
