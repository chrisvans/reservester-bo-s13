<h1>Restaurants</h1>
<p>We have the following restaurants</p>
<table>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Address</th>
			<th>Phone</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	<% @restaurants.each do |x| %>
		<tr>
			<td><%= x.name %></td>
			<td><%= x.description %></td>
			<td><%= x.address %></td>
			<td><%= x.phone %></td>
			<td><%= link_to 'Show', restaurant_path(x) %></td>
			<td><%= link_to 'Edit', edit_restaurant_path(x) %></td>
			<td><%= x.id %></td>
			
		</tr>
	<% end %>
</table>

<p><%= link_to 'New', new_restaurant_path %></p>