<%- model_class = Restaurant -%>
<div class="page-header">
  <h1>Find your Restaurant</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th> 
      <th>Menu</th>           
      <th><%= model_class.human_attribute_name(:street) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:zipcode) %></th>
      <th><%= model_class.human_attribute_name(:phonenumber) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @restaurant.each do |restaurant| %>
      <tr>
        <td><%= link_to("Show", {:action => 'show', :id => restaurant.id}) %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.description %></td>
        <td><%= image_tag(restaurant.image_url(:thumb).to_s) %></td>
        <td><%= link_to('Menu', restaurant.menue_url.to_s, :target => '_blank') %></td>
        <td><%= restaurant.street %> 
        	<%= restaurant.streetnumber %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.zipcode %></td>
        <td><%= restaurant.phonenumber %></td>
        <td><%=l restaurant.created_at %></td>
        <td> 
          <img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= restaurant.geocode[0].to_s %>,<%= restaurant.geocode[1].to_s %>&markers=<%= restaurant.geocode[0].to_s %>,<%= restaurant.geocode[1].to_s %>&zoom=10&size=300x200&sensor=false"></img>
        </td>
        <td>
          <%= link_to('Edit',	{:action => 'edit', :id => restaurant.id}, :class => 'btn btn-mini') %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      {:action => 'delete', :id => restaurant.id},
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to('New', {:action => 'new'}, :class => 'btn btn-primary') %>
