<%- model_class = Restaurant -%>
<script
type="text/javascript"
src="http://maps.google.com/maps/api/js?sensor=false">
</script>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Create Reservation</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:photo) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <th>
        Uploaded File
      </th>
      <th>
        Location
      </th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to t('.new', :default => t("helpers.links.new")),
            new_reservation_path(:restaurant_id => restaurant.id),
            :class => 'btn btn-primary' %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= image_tag restaurant.photo_url(:masthead) %></td>
        <td><%=l restaurant.created_at %></td>
        <td>
          <% if owner_signed_in? %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_restaurant_path(restaurant), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      restaurant_path(restaurant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
        <td>
        <a href="<%= restaurant.pdf %>">Download PDF of Menu</a>
        </td>

        <td><img src='https://maps.googleapis.com/maps/api/staticmap?center=<%= restaurant.latitude.to_s %>,<%= restaurant.longitude.to_s %>&zoom=19&size=400x400&markers=color:green%7Clabel:R%7C<%= restaurant.latitude.to_s %>,<%= restaurant.longitude.to_s %>&sensor=false' alt="Location" ></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% if owner_signed_in? %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_restaurant_path,
            :class => 'btn btn-primary' %>
<% end %>
