<!DOCTYPE html>
<html>
<head>
  <title>Reservester</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
		<div class="navbar-inner">
    	<%= link_to 'Reservester', restaurants_path, :class => "brand" %>
    	<ul class="nav pull-right">
	      <li class="active"><%= link_to 'Home', restaurants_path %></li>
	      <% if owner_signed_in? %>
			  <li>
			  	<%= link_to "Welcome, #{current_owner.name}", restaurants_path %>
			  </li>
			  <li>
			  <%= link_to('Logout', destroy_owner_session_path, :method => :delete) %>
			  </li>
			<% else %>
			  <li>
			  <%= link_to('Owner Login', new_owner_session_path)  %>  
			  </li>
			<% end %>
	      <li><a href="#">Link</a></li>
    	</ul>
  		</div>
	</div>
	<div class="container">
		<%= yield %>
	</div>
</body>
</html>
